                                        style="max-height:200px">
                                </a>
                                <div class="card-footer m-0 p-0">
                                
                                    <div class="content">
                                        <p>
                                            <%- eventsA[i].content.slice(20) %>
                                                <a href="/eventview/<%= eventsA[i]._id %>" class="more"> More...</a>
                                        </p>
                                    </div>
    
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <% if(eventsA[i+1]) { %>
                                <div class="col-md-6 mb-3 ">
    
                                    <div class="card">
                                        <a href="/eventview/<%= eventsA[i+1]._id %>">
                                            <img src="https://s3.amazonaws.com/aiti123vinayak/<%= eventsA[i+1]._id %>.<%= eventsA[i+1].extName %>" alt="" class="img-fluid card-img"
                                                style="max-height:200px">
                                        </a>
                                        <div class="card-footer m-0 p-0">
                                            
                                            <div class="content">
                                                <p>
                                                    <%- eventsA[i+1].content.slice(20) %>
                                                        <a href="/eventview/<%= eventsA[i+1]._id %>" class="more"> More...</a>
                                                </p>
                                            </div>
    
                                        </div>
                                    </div>
    
                                </div>
    
                                <% } %>
                </div>
    
                <% } %>
    
    
                    <% } else{%>
    
    
    
                       
    
                            <h3>No events to attend...</h3>
    
                            <% } %>