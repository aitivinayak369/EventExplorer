<% layout('./layouts/main') -%>
    <div class="container mb-2 mt-3">
        <div class="row mb-3 ml-1">
          <a href="/"><div class="btn btn-success">&lt&lt Back</div></a>  
        </div>
        <div class="row ml-auto">
            <a href="/eventcreation" class="ml-auto mr-3">
                <div class="btn btn-primary ">
                    Create an event
                </div>
            </a>

        </div>
    </div>

    <hr>
    <div class="container mb-3">
        <div class="row ml-4">
            <h5><strong>Created Events</strong></h5>
        </div>
        <% if(eventsC.length>0){ %>

            <% for(i=0;i<eventsC.length;i=i+2) {%>
                <div class="row">
                    <% if(eventsC[i]) { %>
    
                        <div class="col-md-6 mb-3 ">
    
                            <div class="card ">
                                <a href="/eventview/<%= eventsC[i]._id %>">
                                    <img src="https://s3.amazonaws.com/aiti123vinayak/<%= eventsC[i]._id %>.<%= eventsC[i].extName %>" alt="" class="img-fluid card-img"
                                        style="max-height:200px">
                                </a>
                                <div class="card-footer m-0 p-0">
                                
                                    <div class="content">
                                        <p>
                                            <%- eventsC[i].content.slice(20) %>
                                                <a href="/eventview/<%= eventsC[i]._id %>" class="more"> More...</a>
                                        </p>
                                    </div>
    
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <% if(eventsC[i+1]) { %>
                                <div class="col-md-6 mb-3 ">
    
                                    <div class="card">
                                        <a href="/eventview/<%= eventsC[i+1]._id %>">
                                            <img src="https://s3.amazonaws.com/aiti123vinayak/<%= eventsC[i+1]._id %>.<%= eventsC[i+1].extName %>" alt="" class="img-fluid card-img"
                                                style="max-height:200px">
                                        </a>
                                        <div class="card-footer m-0 p-0">
                                            
                                            <div class="content">
                                                <p>
                                                    <%- eventsC[i+1].content.slice(20) %>
                                                        <a href="/eventview/<%= eventsC[i+1]._id %>" class="more"> More...</a>
                                                </p>
                                            </div>
    
                                        </div>
                                    </div>
    
                                </div>
    
                                <% } %>
                </div>
    
                <% } %>
    
    
                    <% } else{%>
    
    
    
                       
    
                            <h3>No events created yet...</h3>
    
                            <% } %>

        <!-- 2 section  -->
        <hr>
        <div class="row ml-4">
            <h5><strong>Events to attend</strong></h5>
        </div>
