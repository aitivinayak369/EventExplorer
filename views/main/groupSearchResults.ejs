<% layout('/layouts/main') %>
 <div class="container mt-4">
     <h5><strong>Search results for..<%= ' '+'"'+searchQuery+'"' %></strong> </h5>
    <% if(groups.length>0){ %>

        <% for(i=0;i<groups.length;i=i+2) {%>
            <div class="row">
                <% if(groups[i]) { %>

                    <div class="col-md-6 mb-3 ">

                        <div class="card ">
                            <a href="/groupview/<%= groups[i].objectID %>">
                                <img src="https://s3.amazonaws.com/aiti123vinayak/<%= groups[i].objectID %>.<%= groups[i].extName %>" alt="" class="img-fluid card-img"
                                    style="max-height:200px">
                            </a>
                            <div class="card-footer m-0 p-0">
                            
                                <div class="content">
                                    <p>
                                        <%- groups[i].content.slice(20) %>
                                            <a href="/groupview/<%= groups[i].objectID %>" class="more"> More...</a>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>
                    <% } %>
                        <% if(groups[i+1]) { %>
                            <div class="col-md-6 mb-3 ">

                                <div class="card">
                                    <a href="/groupview/<%= groups[i+1].objectID %>">
                                        <img src="https://s3.amazonaws.com/aiti123vinayak/<%= groups[i+1].objectID %>.<%= groups[i+1].extName %>" alt="" class="img-fluid card-img"
                                            style="max-height:200px">
                                    </a>
                                    <div class="card-footer m-0 p-0">
                                        
                                        <div class="content">
                                            <p>
                                                <%- groups[i+1].content.slice(20) %>
                                                    <a href="/groupview/<%= groups[i+1].objectID %>" class="more"> More...</a>
                                            </p>
                                        </div>

                                    </div>
                                </div>

                            </div>

                            <% } %>
            </div>

            <% } %>


                <% } else{%>



                   

                        <h3>Sorry no results found...</h3>

                        <% } %>
 </div>
    