<% layout('layouts/main') -%>
<input type="text" hidden value="<%= group._id %>" id="gid">
    <div class="container mt-4">
        <div class="row">
            
            <div class="ml-auto m-0 p-0 mr-4 ">
                    <a href="/group/eventcreation/<%= group._id %>"><span class="btn btn-primary border border-dark m-0 mb-2  ">Create new event</span></a> 
                    <span class="btn btn-primary border border-dark m-0 mb-2 ">Manage Group Members</span>
                   <a href="/deletegroup/<%= group._id %>"><span class="btn btn-primary border border-dark m-0 mb-2 ">Delete Group</span></a> 
            </div>
           
        </div>
        <hr>
        
            <p><strong>Group Name:<%= group.groupName %></strong></p>
            
            <p><strong>Members in group:<%= members.length %></strong></p>
       
        <h5>Group Description:</h5>
        <div class="row">
                <img src="https://s3.amazonaws.com/aiti123vinayak/<%= group._id %>.<%= group.extName %>"alt="" style="max-height:200px">
            <div class=" ml-4 mr-4 mt-1 p-4  border border-primary" style="overflow-x:scroll">
                   

                <%- group.content %>
            </div>

        </div>





        <br>
        <hr>
        <div class="jumbotron border border-radius-0 pt-3 pb-2">
            <h5><strong>Scheduled Events</strong></h5>
           <% var k=3,c=0; %>
            <% for(i=0;i<len;i=i+1) {%>
                    
                    <div class="row pt-1">
                <!-- <div class="col-lg-2">
                 
     
             </div> -->
            
            <% while(i<len&&c<3) { %>
               
                    <% if(group.events[i].Date>=currentDate) { %>
                        <div class="col-4 col-lg-4 mb-2 p-1 p-md-4 pb-md-5" >
                                <div class="card">
                                    <div class="card-header">
                                        
                                        <%- group.events[i].eventName%>
            
                                    </div>
                                <a href="/eventview/<%=group.events[i]._id %>">
                                    <img src="https://s3.amazonaws.com/aiti123vinayak/<%= group.events[i]._id %>.<%= group.events[i].extName %>" alt="" class="card-img-top img-fluid" style="max-height:200px">
                                </a>
                                   
            
                                </div>
                            </div>
                            <% c++ %>
                            <%} %>
               
                <% i++ %>
                
                 
            <% } %>

           
                
               <% c=0 %>


                   
                
                
               
            </div>
  <hr>
                    <% } %>
            
        </div>
        <hr>
        <div class="jumbotron border border-radius-0 pt-3 pb-2">
            <h5><strong>Recent Events</strong></h5>
           <% var k=3,c=0; %>
            <% for(i=0;i<len;i=i+1) {%>
                    
                    <div class="row pt-1">
                <!-- <div class="col-lg-2">
                 
     
             </div> -->
            
            <% while(i<len&&c<3) { %>
               
                    <% if(group.events[i].Date<currentDate) { %>
                        <div class="col-4 col-lg-4 mb-2 p-1 p-md-4 pb-md-5" >
                                <div class="card">
                                    <div class="card-header">
                                        
                                        <%- group.events[i].eventName%>
            
                                    </div>
                                <a href="/eventview/<%=group.events[i]._id %>">
                                    <img src="https://s3.amazonaws.com/aiti123vinayak/<%= group.events[i]._id %>.<%= group.events[i].extName %>" alt="" class="card-img-top img-fluid" style="max-height:200px;">
                                </a>
                                   
            
                                </div>
                            </div>
                            <% c++ %>
                            <%} %>
               
                <% i++ %>
                
                 
            <% } %>

           
                
               <% c=0 %>


                   
                
                
               
            </div>
  <hr>
                    <% } %>
            
        </div>
        <br>
        <% var c=0 %>
    <%for(i=0;i<members.length;i=i+3){%>
            <div class="row">
                <% if(members[i]){ %>
                    <div class="col-4  col-lg-2 mb-2  p-1 p-md-3">
                            <div class="card">
                                <img src="<%= members[i].profileImage %>"alt="" class="card-img-top">
                                <div class="card-footer">
                                 <p>Name: <%= members[i].name %></p> 
                                    <p>Contact:<%= members[i].email %></p>
                                </div>
                            </div>
                        </div>
                  <%}%>
                
                <% if(members[i+1]){ %>
                    <div class="col-4  col-lg-2 mb-2  p-1 p-md-3">
                            <div class="card">
                                <img src="<%= members[i+1].profileImage %>"alt="" class="card-img-top">
                                <div class="card-footer">
                                 <p>Name: <%= members[i+1].name %></p> 
                                    <p>Contact:<%= members[i+1].email %></p>
                                </div>
                            </div>
                        </div>
                <%}%>

                <% if(members[i+2]){ %>
                    div class="col-4  col-lg-2 mb-2  p-1 p-md-3">
                    <div class="card">
                        <img src="<%= members[i+2].profileImage %>"alt="" class="card-img-top">
                        <div class="card-footer">
                         <p>Name: <%= members[i+2].name %></p> 
                            <p>Contact:<%= members[i+2].email %></p>
                        </div>
                    </div>
                </div>
                 <%}%>
                    
                    
                        
                    
                </div>
        


    <%}%>
    
   
        <hr>
        <h5>Comments</h5>
        <div class=" ml-3">
            <div class="form-group">
                
                    
                        <textarea type="text" class="form-control" id="addCommentMessage"></textarea>
                        
                
                
            </div>
            <div class="btn btn-success btn-sm mb-4 p-2" id="addCommentG">Add Comment</div>
            <div class="container ml-5" id="commentSection">
                    <%for(i=0;i<comments.length;i++) { %>
                            <div class="row" >
                                <a href="/profileinfo/<%= comments[i].owner._id %>">
                                    <p><%= comments[i].owner.name %></p>
                                <img src="<%= comments[i].owner.profileImage %>" class="max-size:25px border border-radius-3">
                                </a>
                                <br>
                               
                                </div>
                                <p ><%= comments[i].message %></p>
                                <hr>
                    <%} %>
                </div>
        </div>
    </div>